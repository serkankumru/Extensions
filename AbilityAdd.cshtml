@model DataAccessLayer.Ability
@using FirstMVC.Extensions
@{
    ViewBag.Title = "AbilityAdd";
}

<h2>AbilityAdd</h2>


@using (Html.BeginForm("_AddNewAbility", "Ability")) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Ability</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })



    @Html.MyDropbox("CandaidateId",(List<SelectListItem>) ViewBag.CandidateList,"control-label col-md-2", "col-md-10")

    @Html.MyTextbox("Skill", "control-label col-md-2", "col-md-10")

    @Html.MyTextbox("Point", "control-label col-md-2", "col-md-10")






    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "AbilityList")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
